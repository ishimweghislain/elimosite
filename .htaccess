# PHP Upload Configuration for Large File Uploads
# These settings allow uploading many images at once (30-100+)

# Increase maximum execution time to 10 minutes (600 seconds)
php_value max_execution_time 600

# Increase maximum input time to 10 minutes (600 seconds)
php_value max_input_time 600

# Increase memory limit to 512MB
php_value memory_limit 512M

# Increase maximum upload file size to 50MB per file
php_value upload_max_filesize 50M

# Increase maximum POST data size to 100MB
php_value post_max_size 100M

# Increase maximum number of files that can be uploaded at once
php_value max_file_uploads 100

# Enable error reporting (disable in production)
# php_flag display_errors Off
# php_flag log_errors On

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes
